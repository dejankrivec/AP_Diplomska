<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/notificaion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vjeruj u ljubav"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/notificaion_previous"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/notificaion_title"
        android:src="@mipmap/previos_icon"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/notificaion_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/notificaion_title"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/play_icon"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/notificaion_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/notificaion_title"
        android:layout_alignParentRight="true"
        android:src="@mipmap/next_icon"
        android:layout_marginRight="30dp"/>
</RelativeLayout>