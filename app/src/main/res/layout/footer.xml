<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/start_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:layout_below="@+id/seekbar"/>
    <TextView
        android:id="@+id/end_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:45"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekbar" />
    <ImageView
        android:id="@+id/previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/previos_icon"
        android:layout_below="@+id/start_duration"
        android:layout_marginLeft="30dp" />
    <ImageView
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/play_icon"
        android:layout_below="@+id/start_duration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/next_icon"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/end_duration"
        android:layout_marginRight="30dp"/>
</RelativeLayout>